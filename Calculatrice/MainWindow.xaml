<Window x:Class="Calculatrice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculatrice"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid HorizontalAlignment="Left" Width="515" Margin="0,10,0,0" Height="310" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="mainGrid" HorizontalAlignment="Center" VerticalAlignment="Center" ShowGridLines="True" Height="334" RenderTransformOrigin="0.5,0.5" Width="513" Grid.RowSpan="3">
        </Grid>
        <TextBox x:Name="entryCalcul" HorizontalAlignment="Left" Height="88" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="514"/>
        <Grid HorizontalAlignment="Left" Grid.Row="2" Height="155" VerticalAlignment="Top" Width="515">
            <Button Content="7" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="8" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="9" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="4" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="5" HorizontalAlignment="Left" Margin="90,37,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="6" HorizontalAlignment="Left" Margin="170,37,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="1" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="2" HorizontalAlignment="Left" Margin="90,64,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="3" HorizontalAlignment="Left" Margin="170,64,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="0" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Width="155" Click="Button_Click"/>
            <Button Content="," HorizontalAlignment="Left" Margin="170,91,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="/" HorizontalAlignment="Left" Margin="250,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="*" HorizontalAlignment="Left" Margin="250,37,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="-" HorizontalAlignment="Left" Margin="250,64,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Button Content="+" HorizontalAlignment="Left" Margin="250,91,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        </Grid>

    </Grid>
</Window>
